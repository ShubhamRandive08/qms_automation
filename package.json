{
  "name": "qms-e2e-automation",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "Shubham Balavant Randive",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test:login": "npx playwright test src/tests/login.spec.ts --headed",
    "test:login:headless": "playwright test src/tests/login.spec.ts",
    "test:login:ui": "playwright test src/tests/login.spec.ts --ui",
    "test:login:debug": "playwright test src/tests/login.spec.ts --debug",
    "test": "playwright test",
    "test:dev": "cross-env ENV=dev playwright test",
    "test:qa": "cross-env ENV=qa playwright test",
    "test:staging": "cross-env ENV=staging playwright test",
    "test:prod": "cross-env ENV=prod playwright test",
    "test:qms": "playwright test --grep @QMS",
    "test:sanity": "playwright test --grep @Sanity",
    "test:regression": "playwright test --grep @Regression",
    "test:smoke": "playwright test --grep @Smoke",
    "test:initiation": "playwright test src/tests/qms-document-initiation.spec.ts",
    "test:approval": "playwright test src/tests/qms-approval-flow.spec.ts",
    "test:my-records": "playwright test src/tests/qms-my-records.spec.ts",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:slow": "playwright test --slow-mo=1000",
    "test:workers=1": "playwright test --workers=1",
    "test:workers=2": "playwright test --workers=2",
    "test:retries=3": "playwright test --retries=3",
    "test:timeout=120000": "playwright test --timeout=120000",
    "test:list": "playwright test --reporter=list",
    "test:line": "playwright test --reporter=line",
    "test:dot": "playwright test --reporter=dot",
    "test:json": "playwright test --reporter=json",
    "test:junit": "playwright test --reporter=junit",
    "test:allure": "playwright test --reporter=allure-playwright",
    "report": "playwright show-report",
    "report:allure": "allure generate allure-results --clean && allure open",
    "report:serve": "npx http-server playwright-report -p 8080",
    "test:parallel": "playwright test --workers=50%",
    "test:serial": "playwright test --workers=1",
    "test:shard": "playwright test --shard=1/3",
    "test:qa:html": "cross-env ENV=qa playwright test --reporter=html",
    "test:staging:headed": "cross-env ENV=staging playwright test --headed",
    "test:prod:debug": "cross-env ENV=prod playwright test --debug --workers=1",
    "test:dev:ui": "cross-env ENV=dev playwright test --ui",
    "codegen": "playwright codegen",
    "open": "playwright open",
    "install": "playwright install",
    "install:chromium": "playwright install chromium",
    "install:firefox": "playwright install firefox",
    "install:webkit": "playwright install webkit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "setup:envs": "node scripts/setup-environments.js",
    "generate:data": "node scripts/generate-test-data.js",
    "clean:reports": "rimraf playwright-report allure-report test-results",
    "test:ci": "cross-env CI=true playwright test --reporter=html,github",
    "test:ci:qa": "cross-env CI=true ENV=qa playwright test --reporter=html,github --workers=2",
    "test:ci:staging": "cross-env CI=true ENV=staging playwright test --reporter=junit --output=test-results",
    "trace:viewer": "playwright show-trace",
    "screenshot:compare": "playwright test --update-snapshots",
    "test:all": "npm run test:dev && npm run test:qa && npm run test:staging",
    "test:prod:safe": "cross-env ENV=prod playwright test --grep @SafeForProd --workers=1 --timeout=120000"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.2",
    "allure-playwright": "^3.4.3",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  }
}
